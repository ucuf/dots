# make sxhkd reload its configuration
super + R
	pkill -USR1 -x sxhkd && notify-send "sxhkd" "reload the configuration file"

super + shift + Return
	$\{TERMINAL:-"/bin/xterm"\}

super + r
	dmenu_run

super + grave
	st -t scratchpad -g 212x1+0+0

super + w
	$\{BROWSER:-"firefox"\}

# Audio Control
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-} && pkill -USR1 -x slstatus

XF86AudioMute
	amixer sset Master toggle && pkill -USR1 -x slstatus

# Change screen brightness
XF86MonBrightness{Up,Down}
    light -{A,U} 5

super + BackSpace
	sys

# Screenshot
ctrl + Escape
	maim -s | xclip -selection clipboard -t image/png
